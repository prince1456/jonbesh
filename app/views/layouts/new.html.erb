<!DOCTYPE html>
<html>
    <head>
        <title>Jonbesh new
        </title>
        <%= csrf_meta_tags %>
        <meta content='width=device-width, initial-scale=1.0' name='viewport'/>
        <meta property="og:url" content="<%= @pic.title %> "/>
        <meta property="og:type" content="website"/>
        <meta property="og:title" content="light will arise"/>
        <meta property="og:description" content="light will arise, its true "/>
        <meta property="og:image" content="<%= @pic.image.url(:facebook) %>"/>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <body>
        <div class="navbar-wrapper">
            <div class="container">

                <nav class="navbar navbar-inverse navbar-static-top">
                    <div class="container">

                        <div class="navbar-header navbar-right">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand navbar-right" href="/">Light Arise</a>
                        </div>
                        <div id="navbar" class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right navbar-center">
                                <li class="active"><%= link_to "Home", root_path %></li>
                                <li><%= link_to "Upload Picture", new_pic_path %></li>
                                <li><%= link_to "Reports", reports_path %></li>
                                <li><%= link_to "New Report", new_report_path %></li>
                            </ul>
                        </div>
                    </div>
                </nav>

            </div>
        </div>

        <div class="container padd-t">

            <div class="container">
                <div class="text-center">
                    <%  if user_signed_in? %>
                    <%= image_tag current_user.awatar %>
                    <%= current_user.full_name %>
                    <%= link_to "logout", sessions_path, method: :delete, class: "btn btn-default btn-sm",
                              data: {confirm: "are you sure you want to log out?"}%>
                <% else %>
                    <%= link_to "sign in with twitter", sign_in_with_twitter_path, class: "btn btn-default btn-sm"%>
                    |
                    <%= link_to "sing in with facebook", sign_in_with_facebook_path, class: "btn btn-default btn-sm" %>
                    <% end %>
                </div>
                <%= yield %>
            </div>

            <footer class="foot">
                <p class="pull-right">
                    <a href="#">Back to top</a>
                </p>
                <p>&copy; 2016 Company, Inc. &middot;
                    <a href="#">Privacy</a>
                    &middot;
                    <a href="#">Terms</a>
                </p>
            </footer>
        </div>

        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                    (i[r].q = i[r].q || []).push(arguments)
                },
                i[r].l = 1 * new Date();
                a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', 'UA-70629332-1', 'auto');
            ga('send', 'pageview');
        </script>
    </body>
</html>
