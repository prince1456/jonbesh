<div class="report-form">
  <%= link_to 'New Report', new_report_path %>
<p id="notice"><%= notice %></p>


<h1>Reports</h1>
<div class="row">
  <h3><div class="col-md-4"> Title</div></h3>
<h3>  <div class="col-md-4"> Short Report</div></h3>
  <h3><div class="col-md-4">Report کامل</div></h3>
</div>
<br>

    <% @reports.each do |report| %>
    <div class="row reports-in">
    <h4><div class="col-md-12"><%=link_to report.title, report_path(report.id) %></div></h4>
    <hr>
    <p><div class="col-md-12">  <%= report.body %></div></p>

  </div>

    <% end %>

</div>
