<div class="report-form">
    <p id="notice"><%= notice %></p>

    <div class="row reports-in">
        <h4>
            <div class="col-md-12"><%= @report.title %></div>
        </h4>
        <hr>
        <p>
            <div class="col-md-12">
                <%= @report.body %>
            </div>
        </p>
    </div>
    <div class="row reports-in">
        <div id="comments">
            <% @report.comments.each do |f| %>
            <%= render "/comments/comment", comment: f %>
            <% end %>
        </div>
    </div>

    <div class="row reports-in">
        <div class="continer">
            <%= render '/comments/form' %>
        </div>
        <%= link_to 'Back', reports_path %>
    </div>
</div>
