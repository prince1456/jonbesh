<div class="report-form">
    <p id="notice"><%= notice %></p>

    <div class="row reports-in">
        <!-- <div class="col-md-2">edit</div>
  <div class="col-md-2">show</div> -->
        <h4>
            <div class="col-md-12"><%= @report.title %></div>
        </h4>
        <hr>
        <p>
            <div class="col-md-12">
                <%= @report.body %></div>
        </p>

    </div>

    <div class="row reports-in">
      <% @report.comments.each do |f| %>

      <div class="dialogbox">
        <%= f.name %>
         <div class="body">
           <span class="tip tip-right"></span>
           <div class="message">
             <span><%= f.body %></span>
           </div>
         </div>
       </div>

            <% end %>




    <div class="row reports-in">

        <%= render '/comments/form' %>
    </div>
    <%= link_to 'Back', reports_path %>

</div>
